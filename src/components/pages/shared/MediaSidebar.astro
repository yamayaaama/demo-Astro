---
import { Image } from '@astrojs/image/components'

import Sidebar from "../../../../complete_sample/src/components/layouts/Sidebar.astro"
import Cover from '../../layouts/Cover.astro'

export interface Props {
  src: string
  alt?: string
  isReverse?: boolean
}

const { src, alt='', isReverse = false } = Astro.props 

---


  <Sidebar contentMin='40%' isReverse={isReverse}>
    <div class="side mediaSidebar__side">
      <Image src={src} width={550} height={733} alt={alt} />
    </div>
    <div class="main mediaSidebar__main">
      <Cover minHeight='100%'>
        <slot />
      </Cover>
    </div>
  </Sidebar>


<style>
  .mediaSidebar {
  background-color: var(--color-column);
  margin-inline: calc(50% - (50vw - var(--scrollbar) / 2));
  padding-inline: var(--container-margin);
  padding-block: 96px;
}

.mediaSidebar__side img{
  width: 100%;
  height: auto;
}

.mediaSidebar__main :global(h2) {
  font-weight: bold; 
  font-size: clamp(var(--text-size-xl), 5vw, var(--text-size-xxl));
  line-height: 125%;
}

.mediaSidebar__main :global(p) {
  font-weight: 300;
  font-size: var(--text-size-m);
  line-height: 180%;
  margin-block-start: 24px;
}

.mediaSidebar__main :global(p + p) {
  margin-block-start: 48px;
}
</style>